<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GitFlightApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GitFlightApp"
    xmlns:pages="clr-namespace:GitFlightApp.Pages"
    Title="GitFlightApp">

    <ShellContent
        Title="Flights"
        ContentTemplate="{DataTemplate pages:FlightsPage}"
        Route="FlightPage" />


    <ShellContent
        Title="Flight Connections"
        ContentTemplate="{DataTemplate pages:FlightConnectionsPage}"
        Route="FlightConectionsPage" />

</Shell>
