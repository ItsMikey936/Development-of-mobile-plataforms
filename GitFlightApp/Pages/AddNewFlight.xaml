<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitFlightApp.Pages.AddNewFlight"
             Title="AddNewFlight">
    <VerticalStackLayout Margin="10">
        <Label 
            Text="Add New Flight"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="Flight Number"></Label>
        <Entry MaxLength="5" 
               Text="{Binding FlightNumber}">
        </Entry>

        <Label Text="Departure Date"></Label>
        <DatePicker Date = "{Binding DepartureDate}">
        </DatePicker>
        
        <Label Text="Price"></Label>
        <Entry Keyboard="Numeric" 
               Text="{Binding Price}">
        </Entry>

        <Button Text="Add" Command="{Binding AddNewFlightCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>