<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitFlightApp.Pages.FlightConnectionDetails"
             Title="FlightConnectionDetails">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Flight Connections"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <CollectionView x:Name="connectionsCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10"
                            Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding FlightNumber}" FontAttributes="Bold"></Label>
                                <Label Text="{Binding DepartureDate, StringFormat= '{0:dd/MM/yyyy}'}"></Label>
                                <Label Text="{Binding Price, StringFormat='Price: {0:C}'}"></Label>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>  